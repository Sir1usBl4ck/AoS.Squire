<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AoS.Squire.Components.GameReportView">
    <VerticalStackLayout Grid.Column="0" Padding="24" Spacing="24">
        <Label Text="{Binding PlayerScore}" FontSize="40" FontAttributes="Bold" HorizontalOptions="Center"></Label>

        <VerticalStackLayout>
            <Label FontSize="12" Text="Soulblight Gravelords"></Label>
            <Label Text="Player"></Label>
        </VerticalStackLayout>

        <HorizontalStackLayout>
            <CheckBox HorizontalOptions="Start"></CheckBox>
            <Label VerticalOptions="Center" FontSize="12" Text="Grand Strategy"></Label>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label FontSize="14" Text="Battle Tactics: "></Label>
            <Label FontSize="14" Text="4"></Label>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label FontSize="14" Text="Won Priority: "></Label>
            <Label FontSize="14" Text="2"></Label>
        </HorizontalStackLayout>
                
    </VerticalStackLayout>
</ContentView>
